// This Prisma schema file defines the data models for the video conferencing application.

 datasource db {
   provider = "sqlite"
   url      = "file:./dev.db"
 }
 
 generator client {
   provider = "prisma-client-js"
 }
 
 model User {
   id        Int      @id @default(autoincrement())
   name      String
   email     String   @unique
   meetings   Meeting[]
 }
 
 model Meeting {
   id        Int      @id @default(autoincrement())
   title     String
   description String?
   dateTime  DateTime
   participants User[] @relation("MeetingParticipants")
   files     File[]
 }
 
 model File {
   id        Int      @id @default(autoincrement())
   name      String
   url       String
   meeting   Meeting? @relation(fields: [meetingId], references: [id])
   meetingId Int?
 }